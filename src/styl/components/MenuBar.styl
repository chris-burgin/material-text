.menubar {
  display: flex;
  align-items: center;
  padding: 0 1.6rem
  background-color: white;
  width: 100%;
  height: 4rem;
  position: absolute;
  z-index: 10;

  .actions {
    // apply to all action svgs
    svg {
      width: auto;
      height: 1.6rem;
    }

    > span {
      display: flex;
    }

    // trash svg
    .trash {
      cursor: pointer;

      svg g {
        fill: grey6;
      }

      &:hover {
        svg g {
          fill: red;
        }
      }
    }
  }
}
